/* pages/shopcart/shopcart.wxss */

page {
  background: #eee;
  font-family: "微软雅黑";
}

.list {
  background: #fff;
  display: flex;
  border-bottom: 20rpx solid #eee;
  padding: 20rpx 20rpx 20rpx 20rpx;
  max-height: 180rpx;
}

.info {
  width: 100%;
}

.content-head {
  display: flex;
}

.title {
  display: block;
  font-size: 32rpx;
  padding: 20rpx;
  color: #454545;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 350rpx;
  font-weight: bold;
}

.navimg {
  margin: 10rpx 5rpx 10rpx 5rpx;
  width: 300rpx;
  max-height: 160rpx;
}

.navimg1 {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx 10rpx 10rpx 10rpx
}

.content-info {
  display: block;
  font-size: 24rpx;
  padding: 10rpx 0rpx 0rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 460rpx;
}

.header {
  margin: 120rpx 250rpx 120rpx 250rpx;
  border-bottom: 1px solid #ccc;
  height: 200rpx;
  width: 200rpx;
}

.header view {
  margin: 200rpx 200rpx 200rpx 200rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 180rpx;
}

.content .text-large {
  font-size: 32rpx;
  display: block;
}

.content text {
  font-size: 28rpx;
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 90rpx 200rpx;
  font-size: 35rpx;
}

.imagesize {
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.imagesize image {
  width: 100%;
  height: 1200rpx;
}

.bVerifybottom {
  position: absolute;
  bottom: 90rpx;
  width: 400rpx;
  border-radius: 80rpx;
  font-size: 28rpx;
}